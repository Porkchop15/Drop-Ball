<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:id="@+id/relativeLayout"
    >

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/game" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="315dp"
        android:background="@android:color/transparent"
        android:onClick="goToInstructions4" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:background="@android:color/transparent"
        android:onClick="startGame" />



    <!-- Add 6 slots (ImageViews) and guess buttons here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/transparent"
        android:weightSum="9"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/box1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/meme1"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/box2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/meme2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/box3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/meme3"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="330dp"
        android:background="@android:color/transparent"
        android:weightSum="9"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/box4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/meme4"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/box5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/meme5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/box6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/meme6"
                />
        </LinearLayout>

    </LinearLayout>

    <!-- Add these buttons below the startButton in activity_main.xml -->

    <Button
        android:id="@+id/guessButton1"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:text="Guess 1"
        android:background="@android:color/transparent"
        />

    <Button
        android:id="@+id/guessButton2"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:text="Guess 2"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton3"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:text="Guess 3"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton4"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_marginLeft="206dp"
        android:layout_marginTop="40dp"
        android:text="Guess 4"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton5"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="40dp"
        android:text="Guess 5"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton6"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_marginLeft="332dp"
        android:layout_marginTop="40dp"
        android:text="Guess 6"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>



    <ImageView
        android:id="@+id/ballImageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="13dp"
        android:src="@drawable/bola"
        android:visibility="invisible" />

</RelativeLayout>
