<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout">


    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="startGame" />


    <!-- Add 6 slots (ImageViews) and guess buttons here -->
    <ImageView
        android:id="@+id/box1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/box"
        />

    <ImageView
        android:id="@+id/box2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="140dp"
        android:background="@drawable/box"
        />
    <ImageView
        android:id="@+id/box3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/box"
        />
    <ImageView
        android:id="@+id/box4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/box"
        />
    <ImageView
        android:id="@+id/box5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="140dp"
        android:background="@drawable/box"
        />
    <ImageView
        android:id="@+id/box6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/box"
        />


    <!-- Add these buttons below the startButton in activity_main.xml -->

    <Button
        android:id="@+id/guessButton1"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_below="@id/startButton"
        android:layout_marginTop="543dp"
        android:onClick="onGuessButtonClick"
        android:text="Guess 1" />

    <Button
        android:id="@+id/guessButton2"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_below="@id/startButton"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="543dp"
        android:onClick="onGuessButtonClick"
        android:text="Guess 2" />

    <Button
        android:id="@+id/guessButton3"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_below="@id/startButton"
        android:layout_marginTop="543dp"
        android:layout_marginLeft="120dp"
        android:onClick="onGuessButtonClick"
        android:text="Guess 3" />

    <Button
        android:id="@+id/guessButton4"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:text="Guess 4"
        android:layout_below="@id/startButton"
        android:layout_marginTop="543dp"
        android:layout_marginLeft="180dp"
        android:onClick="onGuessButtonClick" />

    <Button
        android:id="@+id/guessButton5"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:text="Guess 5"
        android:layout_below="@id/startButton"
        android:layout_marginTop="543dp"
        android:layout_marginLeft="240dp"
        android:onClick="onGuessButtonClick" />

    <Button
        android:id="@+id/guessButton6"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:text="Guess 6"
        android:layout_below="@id/startButton"
        android:layout_marginTop="543dp"
        android:layout_marginLeft="300dp"
        android:onClick="onGuessButtonClick" />



</RelativeLayout>
e
